}

void getWeather() {
  Serial.println("\nStarting connection to server..."); //conect to internet and get data
  // if you get a connection, report back via serial:
  if (client.connect(server, 80)) {
    Serial.println("connected to server");
    // Make a HTTP request:
    client.print("GET /data/2.5/weather?");
    client.print("q=" + location);
    client.print("&appid=" + apiKey);
    client.print("&cnt=3");
    client.println("&units=imperial");
    client.println("Host: api.openweathermap.org");
    client.println("Connection: close");
    client.println();
  } else {
    Serial.println("unable to connect");
  }

  delay(1000);
  String line = "";
  while (client.connected()) {
    line = client.readStringUntil('\n');
    //Serial.println(line);
    Serial.println("parsingValues");
    //create a json buffer where to store the json data

    StaticJsonBuffer<5000> jsonBuffer;
    JsonObject& root = jsonBuffer.parseObject(line);
    if (!root.success()) {
      Serial.println("parseObject() failed");
      return;
    }

    //get the data from the json tree
    float temp = root["main"]["temp"];
    String weather = root["weather"][0]["main"];
    //String description = root["weather"][0]["description"];
    unsigned long currentTime = root["dt"];
    unsigned long sunrise = root["sys"]["sunrise"];
    unsigned long sunset = root["sys"]["sunset"];

    Serial.println(temp);
    Serial.println(weather);
    Serial.println(currentTime);
    Serial.println(sunrise);
    Serial.println(sunset);

    int tempToDisplay = (int)(temp + 0.5f); //rounding

    ring(tempToDisplay);
    screenOutput(tempToDisplay, weather, currentTime, sunrise, sunset);

  }
}

void screenOutput(int tempToDisplay, String weather, unsigned long currentTime, unsigned long sunrise, unsigned long sunset) {
  display.fillScreen(BLACK); //clear the display
  display.display();

  if (weather.equalsIgnoreCase("Drizzle") || weather.equalsIgnoreCase("Rain")) {
    display.drawBitmap(0, 0, rain, iconDim, iconDim, WHITE);
  }
  else if (weather.equalsIgnoreCase("Thunderstorm")) {
    display.drawBitmap(0, 0, thunderstorm, iconDim, iconDim, WHITE);
  }
  else if (weather.equalsIgnoreCase("Clouds")) {
    display.drawBitmap(0, 0, cloud, iconDim, iconDim, WHITE);
  }
  else if (weather.equalsIgnoreCase("Snow")) {
    display.drawBitmap(0, 0, snow, iconDim, iconDim, WHITE);
  }
  else if ((weather.equalsIgnoreCase("Atmosphere")) || (weather.equalsIgnoreCase("Mist"))) {
    display.drawBitmap(0, 0, fog, iconDim, iconDim, WHITE);
  }
  else if (weather.equalsIgnoreCase("Clear")) { //display different icons depending whether it's day or night
    if ((currentTime > sunrise ) && (currentTime < sunset)) {
      display.drawBitmap(0, 0, sunny, iconDim, iconDim, WHITE);
    }
    else {
      display.drawBitmap(0, 0, clearNight, iconDim, iconDim, WHITE);
    }
  }
  else if (weather.equalsIgnoreCase("Clouds")) {
    display.drawBitmap(0, 0, cloud, iconDim, iconDim, WHITE);
  }
  else if (weather.equalsIgnoreCase("Extreme")) {
    display.drawBitmap(0, 0, exclamation, iconDim, iconDim, WHITE);
  }
  else if (weather.equalsIgnoreCase("Additional")) {
    display.drawBitmap(0, 0, windy, iconDim, iconDim, WHITE);
  }


  display.drawLine(64, 16, 64, 48, WHITE);

  display.setCursor(80, 24); //print out temperature
  display.setTextSize(2);
  display.setTextColor(WHITE);
  display.print(tempToDisplay);

  //print out description
  display.setTextSize(1);
  display.setCursor(0, 56);
  display.print(locationToPrint);
  
  if (weather.equalsIgnoreCase("Thunderstorm")) {
    display.setCursor(80, 48);
    display.print("Thunder");
    display.setCursor(80, 56);
    display.print("storm");
  }
  else {
    display.setCursor(80, 56);
    display.print(weather); //thunderstorm and atmosphere won't fit. If that's the weather, change the output.
  }
  display.display();

}

void ring(int temp) {
  for (int i = 0; i < NUMPIXELS; i++) { //clear the neopixels
    pixels.Color(i, 0, 0, 0);
  }
  pixels.show();

  if (temp > 80) { //determine what color the neopixels will be
    color = pixels.Color(32, 0, 0); //red
  }
  else if (temp > 60) {
    color = pixels.Color(0, 32, 0); //light green
  }
  else if (temp > 32) {
    color = pixels.Color(32, 32, 0); //yellow
  }
  else {
    color = pixels.Color(0, 32, 32); //cyan
  }

  numLights = ((int) (temp / 4)); //each LED represents 4 degrees Farenheit
  if (numLights > NUMPIXELS) { //don't let it exceed number of pixels
    numLights = NUMPIXELS;
  }
  if (numLights < 1) { //can't light up pixel -1.
    numLights = 1;
  }

  for (int i = 0; i < numLights; i++) { //light up the LEDs
    pixels.setPixelColor(i, color);
  }
  pixels.show();
}
